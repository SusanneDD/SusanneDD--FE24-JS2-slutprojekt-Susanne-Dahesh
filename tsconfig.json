{
  "compilerOptions": {
    "target": "ES6",
    "module": "ESNext",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "resolveJsonModule": true,
    "moduleResolution": "Node"
  },
  "include": ["src", "**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
 